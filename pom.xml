<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.jahia.modules</groupId>
    <artifactId>jahia-modules</artifactId>
    <version>7.0.0.0-SNAPSHOT</version>
  </parent>
  <artifactId>templates-web-space</artifactId>
  <version>2.0.0-SNAPSHOT</version>
  <packaging>bundle</packaging>
  <name>Jahia Web Templates Space</name>
  <description>These are the custom module (jahiaPages) for running on a Jahia server.</description>
  <scm>
    <connection>scm:git:git@github.com:Jahia/templates-web-space.git</connection>
    <developerConnection>scm:git:git@github.com:Jahia/templates-web-space.git</developerConnection>
    <url>scm:git:git@github.com:Jahia/templates-web-space.git</url>
  </scm>
  <repositories>
    <repository>
      <releases>
        <enabled>true</enabled>
        <updatePolicy>never</updatePolicy>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <id>jahia-public</id>
      <name>Jahia Public Repository</name>
      <url>https://devtools.jahia.com/nexus/content/groups/public</url>
    </repository>
  </repositories>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Jahia-Depends>default,grid,calendar,event,facets,news,search,sitemap,skins,default-skins,blog,rating,profile</Jahia-Depends>
            <Jahia-Module-Type>templatesSet</Jahia-Module-Type>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
